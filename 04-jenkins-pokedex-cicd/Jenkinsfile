pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "robeeerr/pokedex-api"
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üîç Clonando repositorio...'
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'üì¶ Instalando dependencias...'
                dir('04-jenkins-pokedex-cicd/pokedex-api') {
                    sh 'npm install'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                echo 'üß™ Ejecutando tests...'
                dir('04-jenkins-pokedex-cicd/pokedex-api') {
                    sh 'npm test'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Construyendo imagen Docker...'
                dir('04-jenkins-pokedex-cicd/pokedex-api') {
                    script {
                        dockerImage = docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                        docker.build("${DOCKER_IMAGE}:latest")
                    }
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo 'üì§ Subiendo imagen a Docker Hub...'
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_CREDENTIALS) {
                        dockerImage.push("${DOCKER_TAG}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'üöÄ Desplegando aplicaci√≥n...'
                sh '''
                    docker stop pokedex-api || true
                    docker rm pokedex-api || true
                    docker run -d \
                        --name pokedex-api \
                        -p 3001:3000 \
                        ${DOCKER_IMAGE}:latest
                '''
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completado exitosamente!'
        }
        failure {
            echo '‚ùå Pipeline fall√≥. Revisa los logs.'
        }
        always {
            echo 'üßπ Limpiando workspace...'
            cleanWs()
        }
    }
}
